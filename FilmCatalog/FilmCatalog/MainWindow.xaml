<Window
    x:Class="FilmCatalog.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    DataContext="{Binding MainViewModel, Source={StaticResource Locator}}"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Button
                    Command="{Binding StartCalculationCommand}"
                    Content="{DynamicResource MainViewButtonStart}"
                    Style="{StaticResource DefaultStartButton}" />
                <Button
                    Command="{Binding EndCalculationCommand}"
                    Content="{DynamicResource MainViewButtonEnd}"
                    Style="{StaticResource DefaultEndButton}" />
            </StackPanel>
            <Label
                Margin="10"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Content="{Binding CalculationNumber}" />
        </StackPanel>
    </Grid>
</Window>